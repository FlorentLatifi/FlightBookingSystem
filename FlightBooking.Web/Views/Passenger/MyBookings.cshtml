@model IEnumerable<FlightBooking.Domain.Entities.Reservation>

@{
    ViewData["Title"] = "My Bookings";
    var passengerName = ViewBag.PassengerName as string ?? "Guest";
    var passengerEmail = ViewBag.PassengerEmail as string ?? "";
}

<!-- Hero -->
<div class="modern-card mb-4" style="background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%); color: white;">
    <h1 class="fw-bold mb-3">
        <i class="bi bi-ticket-perforated me-2"></i>
        My Bookings
    </h1>
    <p class="lead mb-0">Hello, @passengerName</p>
</div>

@if (!Model.Any())
{
    <div class="modern-card text-center">
        <i class="bi bi-inbox" style="font-size: 4rem; color: var(--primary-color); opacity: 0.5;"></i>
        <h3 class="mt-3">No Bookings Yet</h3>
        <p class="text-muted">You haven't made any reservations yet.</p>
        <a asp-controller="Home" asp-action="Index" class="btn-modern btn-primary-modern mt-3">
            <i class="bi bi-search me-2"></i>
            Search Flights
        </a>
    </div>
}
else
{
    <div class="modern-card mb-4">
        <h4 class="fw-bold mb-3">
            <i class="bi bi-list-ul text-primary me-2"></i>
            Your Reservations
        </h4>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Flight</th>
                        <th>Route</th>
                        <th>Date</th>
                        <th>Seat</th>
                        <th>Price</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model)
                    {
                        <tr>
                            <td>
                                <strong class="text-primary">@r.ReservationCode</strong>
                            </td>
                            <td>@r.Flight.FlightNumber</td>
                            <td>
                                @{
                                    var depCode = r.Flight.DepartureAirport.Split('-')[0].Trim();
                                    var arrCode = r.Flight.ArrivalAirport.Split('-')[0].Trim();
                                }
                                <span class="badge bg-light text-dark">@depCode</span>
                                <i class="bi bi-arrow-right mx-1"></i>
                                <span class="badge bg-light text-dark">@arrCode</span>
                            </td>
                            <td>@r.Flight.DepartureTime.ToString("dd MMM yyyy HH:mm")</td>
                            <td>
                                <span class="badge bg-secondary">@r.SeatNumber</span>
                                <small class="text-muted d-block">@r.SeatClass</small>
                            </td>
                            <td class="text-success fw-bold">€@r.TotalPrice.ToString("F2")</td>
                            <td>
                                @switch (r.Status)
                                {
                                    case FlightBooking.Domain.Enums.ReservationStatus.Confirmed:
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>Confirmed
                                        </span>
                                        break;
                                    case FlightBooking.Domain.Enums.ReservationStatus.Pending:
                                        <span class="badge bg-warning">
                                            <i class="bi bi-clock me-1"></i>Pending
                                        </span>
                                        break;
                                    case FlightBooking.Domain.Enums.ReservationStatus.Cancelled:
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle me-1"></i>Cancelled
                                        </span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@r.Status</span>
                                        break;
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
