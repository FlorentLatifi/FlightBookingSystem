@model FlightBooking.Domain.Entities.Passenger

@{
    ViewData["Title"] = "My Profile";
}

<!-- Hero -->
<div class="modern-card mb-4" style="background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%); color: white;">
    <div class="text-center" style="padding: 2rem 0;">
        <i class="bi bi-person-circle" style="font-size: 5rem;"></i>
        <h1 class="fw-bold mt-3 mb-0">@Model.FullName</h1>
    </div>
</div>

<!-- Profile Information -->
<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="modern-card mb-4">
            <h4 class="fw-bold mb-4">
                <i class="bi bi-person-fill text-primary me-2"></i>
                Personal Information
            </h4>

            <div class="row mb-3">
                <div class="col-sm-4 text-muted">Name</div>
                <div class="col-sm-8 fw-bold">@Model.FullName</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 text-muted">Email</div>
                <div class="col-sm-8">@Model.Email</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 text-muted">Phone</div>
                <div class="col-sm-8">@Model.PhoneNumber</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 text-muted">Passport</div>
                <div class="col-sm-8">
                    <span class="badge bg-secondary">@Model.PassportNumber</span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 text-muted">Nationality</div>
                <div class="col-sm-8">@Model.Nationality</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 text-muted">Date of Birth</div>
                <div class="col-sm-8">@Model.DateOfBirth.ToString("dd MMM yyyy")</div>
            </div>
        </div>

        <!-- Statistics -->
        @if (ViewBag.TotalReservations != null)
        {
            <div class="modern-card mb-4" style="background: linear-gradient(135deg, rgba(37, 99, 235, 0.1) 0%, rgba(124, 58, 237, 0.1) 100%);">
                <h5 class="fw-bold mb-3">
                    <i class="bi bi-bar-chart text-primary me-2"></i>
                    Booking Statistics
                </h5>

                <div class="row text-center">
                    <div class="col-4">
                        <div class="display-6 fw-bold text-primary">@ViewBag.TotalReservations</div>
                        <small class="text-muted">Total Bookings</small>
                    </div>
                    <div class="col-4">
                        <div class="display-6 fw-bold text-success">@ViewBag.ConfirmedReservations</div>
                        <small class="text-muted">Confirmed</small>
                    </div>
                    <div class="col-4">
                        <div class="display-6 fw-bold text-warning">€@ViewBag.TotalSpent.ToString("F2")</div>
                        <small class="text-muted">Total Spent</small>
                    </div>
                </div>
            </div>
        }

        <!-- Actions -->
        <div class="d-grid gap-2">
            <a asp-action="MyBookings" asp-route-email="@Model.Email" class="btn-modern btn-primary-modern">
                <i class="bi bi-ticket-perforated me-2"></i>
                View My Bookings
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn-modern" style="background: white; color: var(--primary-color); border: 2px solid var(--primary-color);">
                <i class="bi bi-search me-2"></i>
                Search Flights
            </a>
        </div>
    </div>
</div>