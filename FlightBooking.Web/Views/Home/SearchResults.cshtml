@model IEnumerable<FlightBooking.Application.DTOs.FlightDto>

@{
    ViewData["Title"] = "Search Results";
    var searchCriteria = TempData["SearchCriteria"]?.ToString() ?? "All flights";
}

<!-- Wizard Progress Bar -->
<div class="wizard-progress">
    <div class="progress-steps">
        <div class="progress-step completed">
            <div class="step-icon"><i class="bi bi-check"></i></div>
            <div class="step-label">Search</div>
        </div>
        <div class="progress-step active">
            <div class="step-icon">2</div>
            <div class="step-label">Select Flight</div>
        </div>
        <div class="progress-step">
            <div class="step-icon">3</div>
            <div class="step-label">Passenger Info</div>
        </div>
        <div class="progress-step">
            <div class="step-icon">4</div>
            <div class="step-label">Payment</div>
        </div>
        <div class="progress-step">
            <div class="step-icon">5</div>
            <div class="step-label">Confirmation</div>
        </div>
    </div>
</div>

<!-- Back Button -->
<div class="mb-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-2"></i>
        Back to Search
    </a>
</div>

<!-- Hero Section -->
<div class="modern-card text-center mb-4">
    <h1 class="display-5 fw-bold">
        <i class="bi bi-search text-primary me-2"></i>
        Search Results
    </h1>
    <p class="lead text-muted">@searchCriteria</p>
</div>

<!-- Strategy Pattern Demo (Read-Only for now) -->
<div class="modern-card mb-4" style="background: linear-gradient(135deg, rgba(37, 99, 235, 0.1) 0%, rgba(124, 58, 237, 0.1) 100%); border: 2px dashed var(--primary-color);">
    <div class="d-flex align-items-center mb-3">
        <div style="width: 40px; height: 40px; border-radius: 50%; background: var(--primary-color); color: white; display: flex; align-items: center; justify-content: center; margin-right: 1rem;">
            <i class="bi bi-sliders"></i>
        </div>
        <div>
            <h5 class="fw-bold mb-0">
                <i class="bi bi-lightning-fill text-warning me-2"></i>
                Strategy Pattern Demo
            </h5>
            <p class="small text-muted mb-0">Current pricing strategy: <strong>Standard Pricing</strong></p>
        </div>
    </div>

    <div class="alert alert-info mb-0">
        <i class="bi bi-info-circle me-2"></i>
        <small>
            <strong>Design Pattern:</strong> Prices are calculated using the Strategy Pattern.
            Different strategies (Standard, Discount, Seasonal) can be configured in <code>Program.cs</code>
        </small>
    </div>
</div>

@if (!Model.Any())
{
    <!-- No Results -->
    <div class="alert alert-warning text-center" role="alert">
        <h4 class="alert-heading">
            <i class="bi bi-exclamation-triangle me-2"></i>
            No Flights Found
        </h4>
        <p>No flights available for your search criteria.</p>
        <hr>
        <p class="mb-0">Please try different dates or destinations.</p>
    </div>
}
else
{
    <!-- Results Count -->
    <div class="alert alert-success text-center mb-4" role="alert">
        <i class="bi bi-check-circle me-2"></i>
        Found <strong>@Model.Count()</strong> available flights
    </div>

    <!-- Flight Cards -->
    <div class="row">
        @foreach (var flight in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="flight-card">
                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-airplane-fill text-primary me-2" style="font-size: 1.5rem;"></i>
                            <div>
                                <div class="fw-bold">@flight.Airline</div>
                                <div class="small text-muted">@flight.FlightNumber</div>
                            </div>
                        </div>
                        @if (flight.IsAvailable)
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle me-1"></i>
                                Available
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-warning">
                                <i class="bi bi-exclamation-triangle me-1"></i>
                                Limited
                            </span>
                        }
                    </div>

                    <!-- Route -->
                    <div class="flight-route">
                        <div class="flight-location">
                            <div class="flight-location-code">
                                @{
                                    var depParts = flight.DepartureAirport.Split('-');
                                    var depCode = depParts.Length > 0 ? depParts[0].Trim() : "???";
                                    var depCity = depParts.Length > 1 ? depParts[1].Trim() : "";
                                }
                                @depCode
                            </div>
                            <div class="flight-location-name">@depCity</div>
                            <div class="small text-muted">@flight.DepartureTime.ToString("dd MMM yyyy")</div>
                            <div class="fw-bold text-primary">@flight.DepartureTime.ToString("HH:mm")</div>
                        </div>

                        <div class="flight-arrow">
                            <i class="bi bi-arrow-right"></i>
                            <div class="small text-muted">@flight.FormattedDuration</div>
                        </div>

                        <div class="flight-location">
                            <div class="flight-location-code">
                                @{
                                    var arrParts = flight.ArrivalAirport.Split('-');
                                    var arrCode = arrParts.Length > 0 ? arrParts[0].Trim() : "???";
                                    var arrCity = arrParts.Length > 1 ? arrParts[1].Trim() : "";
                                }
                                @arrCode
                            </div>
                            <div class="flight-location-name">@arrCity</div>
                            <div class="small text-muted">@flight.ArrivalTime.ToString("dd MMM yyyy")</div>
                            <div class="fw-bold text-success">@flight.ArrivalTime.ToString("HH:mm")</div>
                        </div>
                    </div>

                    <hr>

                    <!-- Details -->
                    <div class="flight-details">
                        <div class="flight-detail-item">
                            <div class="flight-detail-label">Price from</div>
                            <div class="flight-detail-value flight-price">€@flight.BasePrice.ToString("F2")</div>
                        </div>
                        <div class="flight-detail-item">
                            <div class="flight-detail-label">Available Seats</div>
                            <div class="flight-detail-value">@flight.AvailableSeats</div>
                        </div>
                    </div>

                    <!-- Book Button -->
                    <div class="mt-3">
                        @if (flight.IsAvailable)
                        {
                            <a asp-controller="Reservation"
                               asp-action="Create"
                               asp-route-flightId="@flight.Id"
                               class="btn-modern btn-primary-modern w-100">
                                <i class="bi bi-ticket-perforated me-2"></i>
                                Book Now
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-secondary w-100" disabled>
                                <i class="bi bi-x-circle me-2"></i>
                                Not Available
                            </button>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script>
        // Initialize wizard
        navigateWizard('flights');

        // Update insights
        updateInsights({
            services: ['FlightService', 'PricingStrategy'],
            patterns: ['Strategy Pattern', 'Repository Pattern', 'MVC Pattern']
        });
    </script>
}