@model IEnumerable<FlightBooking.Application.DTOs.FlightDto>

@{
    ViewData["Title"] = "Rezultatet e Kërkimit";
    var searchCriteria = TempData["SearchCriteria"]?.ToString() ?? "Të gjithë fluturimet";
}

<div class="mb-4">
    <a asp-action="Index" class="btn btn-secondary">
        ← Kthehu te kërkimi
    </a>
</div>

<div class="text-center mb-4">
    <h2>🔍 Rezultatet e Kërkimit</h2>
    <p class="lead text-muted">@searchCriteria</p>
</div>

<!-- DESIGN PATTERN: Strategy Pattern - UI Demo -->
<div class="card mb-4 shadow-sm">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0">💰 Pricing Strategy Demo</h5>
        <small>DESIGN PATTERN: Strategy Pattern - Ndrysho strategjinë për të parë efektin në çmime</small>
    </div>
    <div class="card-body">
        <div class="btn-group w-100 mb-3" role="group">
            <button type="button" class="btn btn-outline-primary active" onclick="applyStrategy('standard', this)">
                Standard Pricing
            </button>
            <button type="button" class="btn btn-outline-success" onclick="applyStrategy('discount', this)">
                10% Discount
            </button>
        </div>
        <div id="strategyInfo" class="alert alert-info mb-0">
            <strong>Strategjia aktuale:</strong> <span id="currentStrategy">Standard Pricing</span>
            <br>
            <small id="strategyDescription">Standard pricing based on seat class</small>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning text-center" role="alert">
        <h4 class="alert-heading">😔 Asnjë fluturim i disponueshëm</h4>
        <p>Nuk u gjetën fluturime për këto kritere kërkimi.</p>
        <hr>
        <p class="mb-0">Ju lutem provoni me data ose destinacione të tjera.</p>
    </div>
}
else
{
    <div class="alert alert-success text-center mb-4" role="alert">
        ✅ U gjetën <strong>@Model.Count()</strong> fluturime të disponueshme!
    </div>

    <div class="row">
        @foreach (var flight in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-primary text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">✈️ @flight.FlightNumber</h5>
                            <span class="badge bg-light text-dark">@flight.Airline</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- Route -->
                        <div class="row mb-3">
                            <div class="col-5 text-center">
                                <div class="fw-bold fs-5">@flight.DepartureAirport.Split('-')[0].Trim()</div>
                                <div class="text-muted small">@flight.DepartureTime.ToString("HH:mm")</div>
                                <div class="text-muted small">@flight.DepartureTime.ToString("dd MMM yyyy")</div>
                            </div>
                            <div class="col-2 text-center">
                                <div class="text-primary">
                                    <i class="bi bi-arrow-right"></i>
                                    <div class="small text-muted">@flight.FormattedDuration</div>
                                </div>
                            </div>
                            <div class="col-5 text-center">
                                <div class="fw-bold fs-5">@flight.ArrivalAirport.Split('-')[0].Trim()</div>
                                <div class="text-muted small">@flight.ArrivalTime.ToString("HH:mm")</div>
                                <div class="text-muted small">@flight.ArrivalTime.ToString("dd MMM yyyy")</div>
                            </div>
                        </div>

                        <hr>

                        <!-- Details -->
                        <div class="row text-center mb-3">
                            <div class="col-6">
                                <div class="text-muted small">Çmimi fillues</div>
                                <div class="fw-bold text-success fs-4">€@flight.BasePrice.ToString("F2")</div>
                            </div>
                            <div class="col-6">
                                <div class="text-muted small">Vende të disponueshme</div>
                                <div class="fw-bold fs-4">@flight.AvailableSeats</div>
                            </div>
                        </div>

                        <!-- Status Badge -->
                        @if (flight.IsAvailable)
                        {
                            <div class="alert alert-success mb-3 py-2 text-center">
                                ✅ E disponueshme për rezervim
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning mb-3 py-2 text-center">
                                ⚠️ Nuk është e disponueshme
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-white">
                        @if (flight.IsAvailable)
                        {
                            <a asp-controller="Reservation"
                               asp-action="Create"
                               asp-route-flightId="@flight.Id"
                               class="btn btn-primary w-100">
                                🎫 Rezervo Tani
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-secondary w-100" disabled>
                                Nuk mund të rezervohet
                            </button>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

<!-- JavaScript për Strategy Pattern Demo -->
<script>
    function applyStrategy(strategy, buttonElement) {
        // Update button states
        document.querySelectorAll('.btn-group button').forEach(btn => {
            btn.classList.remove('active');
        });
        buttonElement.classList.add('active');

        // Update strategy info
        const strategyInfo = {
            'standard': {
                name: 'Standard Pricing',
                description: 'Standard pricing based on seat class'
            },
            'discount': {
                name: 'Discount Pricing (10% OFF)',
                description: 'Discount pricing with 10% off on all seat classes'
            }
        };

        const info = strategyInfo[strategy] || strategyInfo['standard'];
        document.getElementById('currentStrategy').textContent = info.name;
        document.getElementById('strategyDescription').textContent = info.description;

        // Në realitet, këtu do të bëhej fetch për të përditësuar çmimet
        // Për demo, thjesht tregojmë që strategjia u ndryshua
        console.log(`Strategy changed to: ${strategy}`);
    }
</script>
