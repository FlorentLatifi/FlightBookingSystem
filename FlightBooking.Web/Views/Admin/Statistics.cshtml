﻿@model FlightBooking.Application.DTOs.AdminStatisticsDto
@{
    ViewData["Title"] = "Admin - Statistics";
}

<h2 class="fw-bold mb-4">
    <i class="bi bi-bar-chart-line text-primary me-2"></i>
    System Statistics
</h2>

<div class="row">
    <div class="col-md-4">
        <div class="modern-card text-center bg-primary text-white">
            <h1>@Model.TotalFlights</h1>
            <p>Total Flights</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="modern-card text-center bg-success text-white">
            <h1>@Model.TotalReservations</h1>
            <p>Total Reservations</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="modern-card text-center bg-dark text-white">
            <h1>€@Model.TotalRevenue.ToString("F2")</h1>
            <p>Total Revenue</p>
        </div>
    </div>
</div>