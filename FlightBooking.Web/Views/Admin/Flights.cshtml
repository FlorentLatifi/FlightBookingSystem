@model IEnumerable<FlightBooking.Domain.Entities.Flight>

@{
    ViewData["Title"] = "Admin - Flights Management";
}

<div class="mb-4">
    <h2 class="fw-bold">
        <i class="bi bi-airplane-engines text-primary me-2"></i>
        Flights Management
    </h2>
    <p class="text-muted">All flights in the system</p>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="modern-card text-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
            <h3 class="fw-bold mb-0">@Model.Count()</h3>
            <p class="mb-0 opacity-90">Total Flights</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="modern-card text-center" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); color: white;">
            <h3 class="fw-bold mb-0">@Model.Count(f => f.Status == FlightBooking.Domain.Enums.FlightStatus.Scheduled)</h3>
            <p class="mb-0 opacity-90">Scheduled</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="modern-card text-center" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%); color: white;">
            <h3 class="fw-bold mb-0">@Model.Count(f => f.Status == FlightBooking.Domain.Enums.FlightStatus.Departed)</h3>
            <p class="mb-0 opacity-90">Departed</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="modern-card text-center" style="background: linear-gradient(135deg, #30cfd0 0%, #330867 100%); color: white;">
            <h3 class="fw-bold mb-0">@Model.Sum(f => f.AvailableSeats)</h3>
            <p class="mb-0 opacity-90">Available Seats</p>
        </div>
    </div>
</div>

<!-- Flights Table -->
<div class="modern-card">
    <div class="card-header-modern">
        <h4 class="mb-0">
            <i class="bi bi-list-ul me-2"></i>
            All Flights
        </h4>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center my-4">
            <i class="bi bi-info-circle me-2"></i>
            No flights found in the system
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Flight #</th>
                        <th>Airline</th>
                        <th>Route</th>
                        <th>Departure</th>
                        <th>Arrival</th>
                        <th>Duration</th>
                        <th>Price</th>
                        <th>Seats</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var flight in Model)
                    {
                        <tr>
                            <td>
                                <strong>@flight.FlightNumber</strong>
                            </td>
                            <td>@flight.Airline</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <span class="fw-bold">@flight.DepartureAirport.Split('-')[0].Trim()</span>
                                    <i class="bi bi-arrow-right mx-2 text-primary"></i>
                                    <span class="fw-bold">@flight.ArrivalAirport.Split('-')[0].Trim()</span>
                                </div>
                                <div class="small text-muted">
                                    @flight.DepartureAirport.Split('-').Last().Trim() → @flight.ArrivalAirport.Split('-').Last().Trim()
                                </div>
                            </td>
                            <td>
                                <div>@flight.DepartureTime.ToString("dd MMM yyyy")</div>
                                <div class="small text-muted">@flight.DepartureTime.ToString("HH:mm")</div>
                            </td>
                            <td>
                                <div>@flight.ArrivalTime.ToString("dd MMM yyyy")</div>
                                <div class="small text-muted">@flight.ArrivalTime.ToString("HH:mm")</div>
                            </td>
                            <td>
                                @{
                                    var hours = flight.DurationMinutes / 60;
                                    var minutes = flight.DurationMinutes % 60;
                                }
                                <span class="badge bg-info">@hours h @minutes m</span>
                            </td>
                            <td>
                                <strong class="text-success">€@flight.BasePriceAmount.ToString("F2")</strong>
                            </td>
                            <td>
                                <div>@flight.AvailableSeats / @flight.TotalSeats</div>
                                <div class="progress" style="height: 5px;">
                                    <div class="progress-bar" role="progressbar"
                                         style="width: @((flight.AvailableSeats * 100 / flight.TotalSeats))%">
                                    </div>
                                </div>
                            </td>
                            <td>
                                @switch (flight.Status)
                                {
                                    case FlightBooking.Domain.Enums.FlightStatus.Scheduled:
                                        <span class="badge bg-primary">
                                            <i class="bi bi-clock me-1"></i>Scheduled
                                        </span>
                                        break;
                                    case FlightBooking.Domain.Enums.FlightStatus.Boarding:
                                        <span class="badge bg-warning">
                                            <i class="bi bi-door-open me-1"></i>Boarding
                                        </span>
                                        break;
                                    case FlightBooking.Domain.Enums.FlightStatus.Departed:
                                        <span class="badge bg-info">
                                            <i class="bi bi-airplane-engines me-1"></i>Departed
                                        </span>
                                        break;
                                    case FlightBooking.Domain.Enums.FlightStatus.Arrived:
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>Arrived
                                        </span>
                                        break;
                                    case FlightBooking.Domain.Enums.FlightStatus.Delayed:
                                        <span class="badge bg-warning">
                                            <i class="bi bi-exclamation-triangle me-1"></i>Delayed
                                        </span>
                                        break;
                                    case FlightBooking.Domain.Enums.FlightStatus.Cancelled:
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle me-1"></i>Cancelled
                                        </span>
                                        break;
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>