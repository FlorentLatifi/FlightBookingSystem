@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<!-- Error Animation -->
<div class="modern-card text-center mb-4">
    <div class="success-animation">
        <div class="checkmark-circle" style="background: var(--danger-color);">
            <i class="bi bi-exclamation-triangle checkmark"></i>
        </div>
        <h1 class="display-4 fw-bold mb-3" style="color: var(--danger-color);">
            Oops! Something Went Wrong
        </h1>
        <p class="lead text-muted">We encountered an unexpected error</p>
    </div>
</div>

<!-- Error Details -->
<div class="row justify-content-center">
    <div class="col-lg-8">
        @if (Model?.ShowRequestId == true)
        {
            <div class="modern-card mb-4" style="border-left: 4px solid var(--danger-color);">
                <div class="d-flex align-items-start">
                    <div style="width: 50px; height: 50px; border-radius: 50%; background: #fee2e2; color: var(--danger-color); display: flex; align-items: center; justify-content: center; flex-shrink: 0; margin-right: 1rem;">
                        <i class="bi bi-info-circle-fill" style="font-size: 1.5rem;"></i>
                    </div>
                    <div>
                        <h5 class="fw-bold mb-2">Error Details</h5>
                        <p class="mb-0 text-muted">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                        <p class="small text-muted mb-0 mt-2">
                            Please include this Request ID when contacting support.
                        </p>
                    </div>
                </div>
            </div>
        }

        <!-- What to Do -->
        <div class="modern-card mb-4">
            <h5 class="fw-bold mb-3">
                <i class="bi bi-lightbulb text-warning me-2"></i>
                What You Can Do
            </h5>

            <ol class="mb-0 ps-3">
                <li class="mb-2">Go back to the previous page and try again</li>
                <li class="mb-2">Return to the home page and start over</li>
                <li class="mb-2">Clear your browser cache and cookies</li>
                <li class="mb-0">Contact support if the problem persists</li>
            </ol>
        </div>

        <!-- Actions -->
        <div class="d-grid gap-2">
            <button onclick="history.back()" class="btn-modern btn-lg-modern" style="background: white; color: var(--primary-color); border: 2px solid var(--primary-color);">
                <i class="bi bi-arrow-left me-2"></i>
                Go Back
            </button>
            <a asp-controller="Home" asp-action="Index" class="btn-modern btn-primary-modern btn-lg-modern">
                <i class="bi bi-house me-2"></i>
                Back to Home
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Update insights for error page
        updateInsights({
            services: ['ErrorHandler'],
            patterns: ['Error Handling', 'User Experience']
        });
    </script>
}