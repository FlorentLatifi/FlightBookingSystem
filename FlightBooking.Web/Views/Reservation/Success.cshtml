@model FlightBooking.Application.DTOs.ReservationDto

@{
    ViewData["Title"] = "Rezervimi u Përfundua me Sukses";
}

<div class="text-center mb-5">
    <div class="mb-4">
        <span style="font-size: 80px;">✅</span>
    </div>
    <h1 class="display-4 text-success">Rezervimi u Përfundua me Sukses!</h1>
    <p class="lead">Udhëtim të këndshëm!</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <!-- Reservation Code -->
        <div class="alert alert-success text-center shadow-lg mb-4" role="alert">
            <h4 class="alert-heading">🎫 Kodi i Rezervimit</h4>
            <hr>
            <h2 class="display-5 fw-bold">@Model.ReservationCode</h2>
            <hr>
            <p class="mb-0">Ruaje këtë kod! Do të të duhet për check-in.</p>
        </div>

        <!-- Flight Details -->
        <div class="card shadow-lg mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">✈️ Detajet e Fluturimit</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p><strong>Fluturimi:</strong> @Model.Flight.FlightNumber</p>
                        <p><strong>Linja Ajrore:</strong> @Model.Flight.Airline</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Status:</strong> <span class="badge bg-success">@Model.StatusText</span></p>
                        <p><strong>Data e Rezervimit:</strong> @Model.ReservationDate.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>

                <hr>

                <div class="row text-center mb-3">
                    <div class="col-md-6">
                        <div class="border rounded p-3">
                            <h6 class="text-muted">✈️ Nisja</h6>
                            <h4>@Model.Flight.DepartureAirport.Split('-')[0].Trim()</h4>
                            <p class="mb-0">@Model.Flight.DepartureTime.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border rounded p-3">
                            <h6 class="text-muted">🛬 Mbërritja</h6>
                            <h4>@Model.Flight.ArrivalAirport.Split('-')[0].Trim()</h4>
                            <p class="mb-0">@Model.Flight.ArrivalTime.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Passenger Details -->
        <div class="card shadow-lg mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">👤 Detajet e Pasagjerit</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Emri i plotë:</strong> @Model.Passenger.FullName</p>
                        <p><strong>Email:</strong> @Model.Passenger.Email</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Klasa e ulëses:</strong> <span class="badge bg-primary">@Model.SeatClass</span></p>
                        <p><strong>Numri i ulëses:</strong> <span class="badge bg-secondary">@Model.SeatNumber</span></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payment Details -->
        <div class="card shadow-lg mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">💰 Detajet e Pagesës</h5>
            </div>
            <div class="card-body text-center">
                <h3 class="text-success">€@Model.TotalPrice.ToString("F2")</h3>
                <p class="text-muted mb-0">Pagesa u krye me sukses!</p>
            </div>
        </div>

        <!-- Notifications Info -->
        <div class="alert alert-info" role="alert">
            <h5 class="alert-heading">📧 Njoftime</h5>
            <p class="mb-0">
                <strong>Email dhe SMS</strong> konfirmimi janë dërguar te:
                <br>📧 <strong>@Model.Passenger.Email</strong>
            </p>
        </div>

        <!-- Action Buttons -->
        <div class="text-center mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg me-3">
                🏠 Kthehu në Kryefaqe
            </a>
            <button onclick="window.print()" class="btn btn-secondary btn-lg">
                🖨️ Printo Konfirmimin
            </button>
        </div>
    </div>
</div>
